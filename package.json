{
  "name": "pos-system",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "backend",
    "frontend",
    "electron"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "concurrently -k \"pnpm --filter backend start:dev\" \"pnpm --filter frontend dev\" \"pnpm --filter electron start\"",
    "start": "pnpm --filter electron start",
    "dist": "pnpm build && pnpm --filter electron dist"
  },
  "devDependencies": {
    "wait-on": "^8.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "prisma": "^6.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "concurrently": "^7.6.0"
  },
  "build": {
    "appId": "com.thernee.pos",
    "files": [
      "dist/**/*",
      "backend/**/*",
      "frontend/build/**/*"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@prisma/client": "^6.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sqlite3": "^5.1.7"
  }
}