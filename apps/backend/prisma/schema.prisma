datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id         Int     @id @default(autoincrement())
  name       String
  cardNumber String? @unique
  email      String? @unique
  phone      String?

  cashBalance Float @default(0.0)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
}

model Transaction {
  id         Int             @id @default(autoincrement())
  customer   Customer        @relation(fields: [customerId], references: [id])
  customerId Int
  type       TransactionType
  amount     Float
  timestamp  DateTime        @default(now())
  note       String?
}

enum TransactionType {
  ADD_CASH // customer brings cash in
  ADD_WALLET // customer transfers digital funds in
  REMOVE_CASH // customer withdraws physical cash
  REMOVE_WALLET // customer withdraws digital funds
}

model CashWallet {
  id            Int      @id @default(1)
  cashOnHand    Float    @default(0.0)
  digitalWallet Float    @default(0.0)
  lastUpdated   DateTime @updatedAt
}
