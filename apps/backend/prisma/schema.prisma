datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id         Int     @id @default(autoincrement())
  name       String
  cardNumber String? @unique
  email      String? @unique
  phone      String?

  // Balance fields
  cashBalance   Float @default(0.0)
  walletBalance Float @default(0.0)
  debtBalance   Float @default(0.0)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
}

model Transaction {
  id         Int             @id @default(autoincrement())
  customer   Customer        @relation(fields: [customerId], references: [id])
  customerId Int
  type       TransactionType
  amount     Float
  timestamp  DateTime        @default(now())
  note       String?
}

enum TransactionType {
  CASH_COLLECTION

  CASH_DEPOSIT
  ATM_DEPOSIT
  TRANSFER_IN
  TRANSFER_OUT
  CASH_WITHDRAWAL

  DEBT_COLLECTION
}

model CashWallet {
  id            Int      @id @default(1)
  cashOnHand    Float    @default(0.0)
  digitalWallet Float    @default(0.0)
  lastUpdated   DateTime @updatedAt
}
